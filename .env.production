# Production Environment Configuration
# CRITICAL: Update all values before deploying to production!

# Domains
FRONTEND_DOMAIN=your-frontend-domain.com
API_DOMAIN=api.your-domain.com

# Ports
FRONTEND_PORT=3000
BACKEND_PORT=8000
HTTP_PORT=80
HTTPS_PORT=443

# Security (CRITICAL: Generate secure values)
SECRET_KEY=your-super-secure-secret-key-generate-new-one
REDIS_PASSWORD=your-secure-redis-password

# API Keys
OPENAI_API_KEY=your-openai-api-key
HUGGING_FACE_API_KEY=your-huggingface-api-key

# Features
ENABLE_ANALYTICS=false

# Database (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/persian_chatbot

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Monitoring
SENTRY_DSN=your-sentry-dsn-url
LOG_LEVEL=INFO

# Performance
MAX_AUDIO_SIZE_MB=10
MAX_REQUESTS_PER_MINUTE=100
MAX_WEBSOCKET_CONNECTIONS=200