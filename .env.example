# Persian AI Chatbot - Environment Configuration
# Copy this file to .env and configure your values

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Environment (development, staging, production)
NODE_ENV=production
PYTHON_ENV=production
DEBUG=false

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000/api

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/persian_chatbot
DB_HOST=localhost
DB_PORT=5432
DB_NAME=persian_chatbot
DB_USER=username
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# AI AND ML CONFIGURATION
# ============================================================================

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL_NAME=microsoft/DialoGPT-medium
HUGGINGFACE_CACHE_DIR=/tmp/huggingface_cache

# OpenAI Configuration (if using)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Model Configuration
AI_MODEL_TEMPERATURE=0.7
AI_MODEL_MAX_TOKENS=150
AI_MODEL_TOP_P=1.0

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Keys and Secrets
API_SECRET_KEY=your-api-secret-key-change-this
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================

# Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.wav,.mp3,.ogg,.m4a,.flac
UPLOAD_DIRECTORY=./uploads

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Logging Levels (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@yourdomain.com

# Webhook URLs
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# ============================================================================
# CI/CD CONFIGURATION
# ============================================================================

# GitLab CI/CD Variables (set in GitLab CI/CD settings)
# CI_REGISTRY_IMAGE=registry.gitlab.com/your-group/your-project
# CI_REGISTRY_USER=gitlab-ci-token
# CI_REGISTRY_PASSWORD=$CI_JOB_TOKEN

# Deployment Servers
STAGING_SERVER=staging.yourdomain.com
STAGING_USER=deploy
STAGING_PATH=/opt/persian-chatbot
STAGING_URL=https://staging.yourdomain.com

PRODUCTION_SERVER=production.yourdomain.com
PRODUCTION_USER=deploy
PRODUCTION_PATH=/opt/persian-chatbot
PRODUCTION_URL=https://yourdomain.com

# SSH Keys (base64 encoded private key)
# SSH_PRIVATE_KEY=your-base64-encoded-private-key

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================

# Docker Compose Override
COMPOSE_PROJECT_NAME=persian-chatbot
COMPOSE_FILE=docker-compose.yml:docker-compose.production.yml

# Container Configuration
BACKEND_PORT=8000
FRONTEND_PORT=80
NGINX_PORT=80

# Resource Limits
BACKEND_MEMORY=512m
FRONTEND_MEMORY=256m
NGINX_MEMORY=128m

# ============================================================================
# MONITORING AND HEALTH CHECKS
# ============================================================================

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Monitoring URLs
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Feature Toggles
ENABLE_VOICE_PROCESSING=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_FILE_UPLOADS=true
ENABLE_USER_REGISTRATION=false
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Development Only Settings (not used in production)
DEV_MOCK_AI_RESPONSES=false
DEV_SKIP_AUTH=false
DEV_ENABLE_DEBUG_TOOLBAR=false
DEV_AUTO_RELOAD=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_persian_chatbot
TEST_REDIS_URL=redis://localhost:6379/1

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Worker Configuration
WORKERS=1
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=30

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Connection Pooling
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=/opt/backups

# S3 Backup Configuration (optional)
S3_BACKUP_BUCKET=your-backup-bucket
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1