# Persian Voice Chatbot - Browser-Based Configuration
# No API keys required - everything runs in the browser!

# Application Configuration
NEXT_PUBLIC_APP_NAME=Persian AI Chatbot
NEXT_PUBLIC_APP_VERSION=2.0.0

# Browser API Configuration
NEXT_PUBLIC_SPEECH_LANG=fa-IR
NEXT_PUBLIC_TTS_RATE=0.8
NEXT_PUBLIC_TTS_PITCH=1.0
NEXT_PUBLIC_TTS_VOLUME=1.0

# Feature Flags
NEXT_PUBLIC_ENABLE_SPEECH_RECOGNITION=true
NEXT_PUBLIC_ENABLE_SPEECH_SYNTHESIS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# Performance Settings
NEXT_PUBLIC_MIN_CONFIDENCE_THRESHOLD=0.3
NEXT_PUBLIC_MAX_CONVERSATION_HISTORY=10
NEXT_PUBLIC_RESPONSE_DELAY_MS=500

# UI Configuration
NEXT_PUBLIC_THEME=dark
NEXT_PUBLIC_PERSIAN_FONT=true
NEXT_PUBLIC_ANIMATIONS=true

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_CONSOLE_LOGS=true